<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Dziennik_treningowy.ViewModels"
             x:DataType="viewmodels:HistoryViewModel"
             x:Class="Dziennik_treningowy.Views.HistoryPage"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <CollectionView x:Name="MainCollectionView" Grid.Column="0" Grid.Row="0" ItemSizingStrategy="MeasureAllItems" ItemsSource="{Binding SourceCollection}" SelectionMode="Single" 
                            SelectedItem="{Binding SelectedItem}" SelectionChanged="MainCollectionView_SelectionChanged">
                
            </CollectionView>
        </Grid>

    </ContentPage.Content>
</ContentPage>