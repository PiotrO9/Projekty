                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Frame Grid.Column="0" Grid.Row="0" Style="{StaticResource Tile}" BackgroundColor="{Binding FirstTileBackgroundColor}">
                    <Frame.GestureRecognizers>
