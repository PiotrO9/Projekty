<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             x:Class="LoginApp.Views.CorrectLoginPage"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" BackgroundColor="{StaticResource DarkPurpleBackgroudnColor}">
            <Label Text="{Binding Login, StringFormat='Zalogowano jako: {0}'}}" FontSize="20"/>
            <Label Text="{Binding Password, StringFormat='Użyto hasła: {0}'}}" FontSize="20"/>
            <Button Text="Wróc" FontSize="20" Command="{prism:GoBack}" BackgroundColor="{StaticResource LightPurpleBackgroudnColor}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>